<!--管理者側  会員情報詳細画面-->
<div class="container">
  <div class="row">
    <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
    <div class="col-sm-3 ml-5 my-4">
      
    </div>
  </div>
  
    <div class="row">
      <div class="col-sm-3 py-1 mt-2">
        会員ID
      </div>
      <div class="col-sm-3 py-1">
        <%= @customer.id %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 py-1 mt-1">
        氏名
      </div>
      <div class="col-sm-3 py-1">
        <%= @customer.last_name + @customer.first_name %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 py-1 mt-1">
        フリガナ
      </div>
      <div class="col-sm-3 py-1">
        <%= @customer.last_name_kana + @customer.first_name_kana %> 
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 py-1 mt-1">
        郵便番号
      </div>
      <div class="col-sm-3 py-1">
        <%= @customer.post_code %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 py-1 mt-1">
        住所
      </div>
      <div class="col-sm-3 py-1">
        <%= @customer.address %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 py-1 mt-1">
         電話番号
      </div>
      <div class="col-sm-3 py-1">
        <%= @customer.phone_number %>
      </div>
    </div>
            
    <div class="row">
      <div class="col-sm-3 py-1 mt-1">
         メールアドレス
      </div>
      <div class="col-sm-3 py-1">
        <%= @customer.email %>
      </div>
    </div>
            
    <div class="row">
      <div class="col-sm-3 py-1 mt-1">
         会員ステータス
      </div>
      <div class="col-sm-3 py-1">
        <% if @customer.is_active == true%>
          有効
        <% else %>
          退会
        <% end %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-3">
      </div>
      <div class="col-sm-1.5 mt-2">
        <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success btn-block" %>
      </div>
      <div class="col-sm-1">
      </div>
      <div class="col-sm-2.5 py-2">
        <%= link_to "注文履歴一覧を見る", admin_order_path, class: "btn btn-primary btn-block" %>
      </div>
    </div>
    
  </div>
</div>