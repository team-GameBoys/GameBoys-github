<div class="container mt-4">
  <div class="row">
    <h2 class="ml-5 px-3">ジャンル一覧・追加</h2>
  </div>
  <div class="row mt-5">
    <div class="col-10">
      <div class="col-5">
      </div>
        <div class="row mt-5">
          <div class="col-2 ">ジャンル名</div>
          <div class="row">
            <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
            <%= f.text_field :name, class: "mr-5", :size =>"30", placeholder:"ジャンル名" %>
             <%= f.submit "新規登録",  class: "ml-2 btn btn-success" %>
            <% end %>
          </div>
          <div class="col-6 mt-5">
            <table class="table">
              <thead class="thead-light">
                <th colspan="2">ジャンル</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </thead>
              <tbody>
                <% @genres.each do |genre| %>
                  <tr>
                    <td><%= genre.name %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
                    <td></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
</div>