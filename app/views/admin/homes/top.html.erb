<div class="container mt-5">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <div class="row">
        <h2 class="mb-4 px-3">注文履歴一覧</h2>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-sm-10 px-sm-0 mx-auto mb-5">

        <table class="table text-center admin-items mb-5">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order.reverse.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order.id), :style=>"color: #777;" do %>
                  <u><%= order.created_at.strftime('%Y/%m/%d %H時%M分%S秒') %></u>
                <% end %>
              </td>
              <td ><%= order.name %></td>
              <td>
              <% total_quantity = 0 %>
               <% order.order_items.each do |order_item| %>
                <% total_quantity += order_item.quantity %>
               <% end %>
              <%= total_quantity %>
              </td>
              <td class="align-middle">
                <%= order.status_i18n %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>