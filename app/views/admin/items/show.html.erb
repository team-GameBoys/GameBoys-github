<!--管理者側の商品詳細ページ-->
<p id="notice"></p>
<div class="container mt-5 mb-5">
  <div class="row ml-3 mb-3">
    <h2 class="px-3">商品詳細</h2>
  </div>
	<div class="row text-center text-xs-center text-sm-left text-md-left ">
    <div class="col-5">
      <%= image_tag @item.get_image(400,400) %>
    </div>

    <div class="col-7 item-details mx-auto">
      <table>
      <tr>
        <td width="150">
          商品名
        </td>
        <td>
          <%= @item.name %>
        </td>
      </tr>

      <tr height="100">
        <td>
          商品説明
        </td>
        <td>
          <!--https://qiita.com/mmaumtjgj/items/1b672f3accd37387b2f3-->
          <%= simple_format(@item.introduction) %>
        </td>
      </tr>

      <tr height="30">
        <td>
          ジャンル
        </td>
        <td>
          <%=@genre.name %>
        </td>
      </tr>

      <% if @item.is_active == true %>
       <tr height="100">
        <td>税込価格<br>(税抜価格)</td>
          <td>
            <!--.to_s(:delimited)は3桁ごとにカンマ区切りで表示してくれる便利なメソッドです-->
            <%= @item.add_tax_price.to_s(:delimited) %>
            (<%= @item.price.to_s(:delimited) %>)円
          </td>
        </tr>

        <tr height="100">
          <td>販売ステータス</td>
          <td class="text-success"><b>販売中</b></td>
        </tr>

      <% else %>
      <tr height="100">
        <td>販売ステータス</td>
        <td class="text-danger"><b>販売停止中</b></td>
      </tr>
      <% end %>

      <tr height="40">
        <td></td>
        <td><%= link_to "編集する", edit_admin_item_path, class:"btn btn-success" %></td>
      </tr>

    <table>
    </div>
  </div>
</div>