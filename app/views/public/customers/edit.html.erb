<div class="container">
  <div class="col-sm-6 ml-5 my-4">
    <h5>会員情報編集</h5>
  </div>
    <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>

    <div class="row">
      <div class="col-sm-3 py-1 mt-2">
        氏名
      </div>

        <div class="col-sm-3 py-1">
          <%= f.text_field :last_name %>
        </div>

        <div class="col-sm-3 py-1">
          <%= f.text_field :first_name %>
        </div>
      </div>

          <div class="row">
            <div class="col-sm-3 py-1 mt-1">
              フリガナ
            </div>
            <div class="col-sm-3 py-1">
              <%= f.text_field :last_name_kana %>
            </div>
            <div class="col-sm-3 py-1">
              <%= f.text_field :first_name_kana %>
            </div>
          </div>

              <div class="row">
                <div class="col-sm-3 py-1 mt-1">
                  郵便番号
              </div>
              <div class="col-sm-3 py-1">
                <%= f.text_field :post_code %>
              </div>
              </div>

                <div class="row">
                  <div class="col-sm-3 py-1 mt-1">
                    住所
                  </div>
                  <div class="col-sm-3 py-1">
                    <%= f.text_field :address, size: 60 %>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-3 py-1 mt-1">
                    電話番号
                  </div>
                  <div class="col-sm-3 py-1">
                    <%= f.text_field :phone_number %>
                  </div>
                </div>

            <div class="row">
              <div class="col-sm-3 py-1 mt-1">
                メールアドレス
              </div>
              <div class="col-sm-3 py-1">
                <%= f.text_field :email %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-3">
              </div>
              <div class="col-sm-4 py-1 mt-2">
                <%= f.submit "編集内容を保存", class: "btn btn-success btn-block" %>
              </div>
            </div>

  <% end %>
</div>