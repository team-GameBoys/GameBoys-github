<div class="container">
  <div class="row">
    <div class="col-sm-3 px-4 ml-5 my-4">
      <h2>会員情報編集</h2>
    </div>
  </div>
  
　　　　　　　　　　　　<!--updateなのでupdate_path-->
    <%= form_with model: @customer, url: update_path, method: :patch do |f| %>
　　　　　　　　　　　　
　　　　　　　　　　　　
    <div class="row">
      <div class="col-sm-3 py-1 mt-2">
        氏名
      </div>

        <div class="col-sm-3 py-1">
          <%= f.text_field :last_name %>
        </div>

        <div class="col-sm-3 py-1">
          <%= f.text_field :first_name %>
        </div>
      </div>

          <div class="row">
            <div class="col-sm-3 py-1 mt-1">
              フリガナ
            </div>
            <div class="col-sm-3 py-1">
              <%= f.text_field :last_name_kana %>
            </div>
            <div class="col-sm-3 py-1">
              <%= f.text_field :first_name_kana %>
            </div>
          </div>

              <div class="row">
                <div class="col-sm-3 py-1 mt-1">
                  郵便番号
              </div>
              <div class="col-sm-3 py-1">
                <%= f.text_field :post_code %>
              </div>
              </div>

                <div class="row">
                  <div class="col-sm-3 py-1 mt-1">
                    住所
                  </div>
                  <div class="col-sm-3 py-1">
                    <%= f.text_field :address, size: 60 %>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-3 py-1 mt-1">
                    電話番号
                  </div>
                  <div class="col-sm-3 py-1">
                    <%= f.text_field :phone_number %>
                  </div>
                </div>

            <div class="row">
              <div class="col-sm-3 py-1 mt-1">
                メールアドレス
              </div>
              <div class="col-sm-3 py-1">
                <%= f.text_field :email %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-3">
              </div>
              <div class="col-sm-4 mt-2">
                <%= f.submit "編集内容を保存", class: "btn btn-success btn-block" %>
              </div>
              <div class="col-sm-1">
              </div>
              <div class="col-sm-2 py-2">
                <%= link_to "退会する", unsubscribe_path, method: :get, class: "btn btn-danger btn-block" %>
            </div>
            </div>

  <% end %>
</div>