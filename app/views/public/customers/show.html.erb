<div class="container mt-3">
  <div class="row">
    <div class="col-sm-3 ml-5 my-4">
      <div class="row">
        <h2 class="mx-4 px-3">マイページ</h2>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-2 mt-2">
      <h5><strong>登録情報</strong></h5>
    </div>
    <div class="col-2 my-1 pl-0 pb-2">
      <%= link_to "編集する",edit_path, class:"btn btn-success btn-block" %>
    </div>
    </div>
      <table class="col-9 table table-bordered">
        <tbody>
          <tr>
            <td class="col-3" style="background-color: #e5e5e5;">氏名</td>
            <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td style="background-color: #e5e5e5;">カナ</td>
            <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td style="background-color: #e5e5e5;">郵便番号</td>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <td style="background-color: #e5e5e5;">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td style="background-color: #e5e5e5;">電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td style="background-color: #e5e5e5;">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="col-2 py-1 mt-2">
          <h5><strong>配送先</strong></h5>
        </div>
          <div class="col-2 py-1 px-0">
            <%= link_to "一覧を見る", deliveries_path, class: "btn btn-primary btn-block" %>
          </div>
        </div>
          <div class="row">
            <div class="col-2 py-1 mt-2">
              <h5><strong>注文履歴</strong></h5>
            </div>
            <div class="col-2 py-1 px-0">
              <%= link_to "一覧を見る", orders_path, class: "btn btn-primary btn-block" %>
            </div>
  </div>
</div>