<div class="container">
  <div class="row">
    <div class="col-auto my-4">
      <h2 class="mx-5">配送先登録/一覧</h2>
    </div>
  </div>

    <%= form_with model: @delivery, url: deliveries_path, method: :post do |f| %>

    <div class="row">
      <div class="col-sm-3 py-1">
        郵便番号（ハイフンなし）
      </div>
      <div class="col-sm-3 py-1">
        <%= f.text_field :post_code %>
      </div>
      </div>

        <div class="row">
          <div class="col-sm-3 py-2">
            住所
          </div>
          <div class="col-sm-3 py-1">
            <%= f.text_field :address, size: 60 %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-3 py-2">
            宛名
          </div>
          <div class="col-sm-5 py-1">
            <%= f.text_field :name %>
          </div>
          <div class="col-sm-2 py-1 ml-3">
            <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
            <% end %>
          </div>
        </div>
    </div>
    <div class="row mt-4 ml-5">
      <div class="col-sm-7 ml-5">
      <table class="table table-bordered ml-5">
        <thead>
          <tr>
            <th class="col-2">郵便番号</th>
            <th>住所</th>
            <th class="col-2">宛名</th>
            <th></th>
          </tr>
        </thead>

        <% @deliveries.each do |delivery| %>

        <tr>
          <td>
            <%= delivery.post_code %>
          </td>
          <td>
            <%= delivery.address %>
          </td>
          <td>
            <%= delivery.name %>
          </td>
          <td class="col-4">
            <%= link_to "編集する", edit_delivery_path(delivery), method: :get, class: "btn btn-success ml-3" %>
            <%= link_to "削除する", delivery_path(delivery), method: :delete, class: "btn btn-danger ml-2" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>