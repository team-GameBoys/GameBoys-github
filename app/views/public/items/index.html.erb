<!--カスタマー側の商品一覧ページ-->
<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0">
      <h2>商品一覧(全<%= @items.count %>件)</h2>
    </div>
  </div>
  <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">

    <% @items.each do |item|%>
      <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
        <div class="card w-100 bg-transparent border-0" style="width: 18rem;">

          <%= link_to item_path(item) do%>
            <p class="img-wrap">
              <%= image_tag item.get_image(100,100) %>
            </p>
          <% end %>

          <div class="card-body">
            <p class="item-details item-name card-text">
              <%= item.name %>
            </p>

            <% if item.is_active == true %>
              <p class="item-details card-text"><%= item.add_tax_price %>円(税込み価格)</p>
            <% else %>
              <p class="text-danger font-weight-bold card-text">SOLD OUT!!</p>
            <% end %>

          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
