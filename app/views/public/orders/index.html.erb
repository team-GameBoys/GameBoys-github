<div class="container">
  <div class="row">
    <div class="col-auto ml-5 my-4">
      <div class="row">
        <h2 class="mx-5 px-3">注文履歴一覧</h2>
      </div>
    </div>
  </div>

    <div class="row">
      <div class="col-12">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="col-1" style="background-color: #e5e5e5;">注文日</td>
              <td class="col-4" style="background-color: #e5e5e5;">配送先</td>
              <td class="col-3" style="background-color: #e5e5e5;">注文商品</td>
              <td class="col-1" style="background-color: #e5e5e5;">支払金額</td>
              <td class="col-auto" style="background-color: #e5e5e5;">ステータス</td>
              <td class="col-auto" style="background-color: #e5e5e5;">注文詳細</td>
            </tr>

          <% @orders.each do |order| %>

            <tr>
              <td>
                <%= order.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td>
                〒<%= order.post_code %><br><%= order.address %><br><%= order.name %></td>
              <td>
                <% order.order_items.each do |order_item| %>
                <%= order_item.item.name %><br>
                <% end %>
              </td>
              <td><%= order.total_payment.to_s(:delimited) %>円</td>
              <td><%= order.status %></td>
              <td><%= link_to "表示する",order_path(order), class: "btn btn-primary mt-3 ml-2" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>