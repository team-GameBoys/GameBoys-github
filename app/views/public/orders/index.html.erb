<div class="container">
  <div class="col-6 ml-5 my-4">
    <h2>注文履歴一覧</h2>
      </div>
      
    <div class="row">
      <div class="col-sm-12">
        <table class="col-md-12 table table-bordered">
          <tbody>
            <tr>
              <td class="col-1">注文日</td>
              <td class="col-3">配送先</td>
              <td class="col-2">注文商品</td>
              <td class="col-2">支払金額</td>
              <td class="col-2">ステータス</td>
              <td class="col-2">注文詳細</td>
            </tr>
            
          <% @orders.each do |order| %>
            <% @orders.each do |order_item| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.post_code %><%= order.address %><%= order.name %></td>
              <td><%= order_item.id %></td>
              <td><%= order_item.total_payment %></td>
              <td><%= order_item.status %></td>
              <td><%= link_to "表示する",order_path(order), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>