<div class="container">
  <div class="row">
    <div class="col-auto my-4">
      <h2 class="mx-4">注文履歴詳細</h2>
    </div>
  </div>

    <div class="row">
      <div class="col-6 mt-3">
        <h5><strong>注文情報</strong></h5>
          <table align="left" class="table table-bordered">
            <tr>
              <td class="col-3">注文日</td>
              <td><%= @order.created_at %></td>
            </tr>
            <tr>
              <td>配送先</td>
              <td>〒<%= @order.post_code %><br><%= @order.address %><br><%= @order.name %></td>
            </tr>
            <tr>
              <td>支払方法</td>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td><%= @order.status %></td>
            </tr>
          </table>
        </div>
      <div class="col-4 my-3">
        <h5><strong>請求情報</strong></h5>
          <table class="table table-bordered">
            <tr>
              <td class="col-7">商品合計</td>
              <td><%= @order.total_payment %></td>
            </tr>
            <tr>
              <td>配送料</td>
              <td>800</td>
            </tr>
            <tr>
              <td>ご請求額</td>
              <td><%= @order.total_payment %></td>
            </tr>
          </table>
        </div>
      </div>

  <div class="row">
    <div class="col-8">
      <h5><strong>注文内容</strong></h5>
      <table class="table table-bordered">
        <tr>
          <td class="col-5">商品</td>
          <td class="col-2">単価</td>
          <td class="col-1">個数</td>
          <td class="col-1">小計</td>
        </tr>
        
        <% @order_item.each do |order_item| %>
        
        <tr>
          <td><%= order_item.name %></td>
          <td><%= order_item.price %></td>
          <td><%= order_item.quantity %></td>
          <td><%= @total += cart_item.subtotal %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>