<div class="container">
  <div class="row">
    <div class="px-5 mx-auto">
      <h2 class="mt-4 ml-3"><span style="background-color: #e5e5e5;">新規会員登録</span></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
         <table cellpadding="10">
           <th>
             <td></td>
             <td></td>
             <td></td>
             <td></td>
             <td></td>
           </th>
           <tr>
             <td>名前</td>
             <td>(姓)</td>
             <td><%= f.text_field :last_name, placeholder: "道子" %></td>
             <td>(名)</td>
             <td><%= f.text_field :first_name, placeholder: "令和"%></td>
           </tr>
           <tr>
             <td>フリガナ</td>
             <td>(セイ)</td>
             <td><%= f.text_field :last_name_kana, placeholder: "ミチコ" %></td>
             <td>(メイ)</td>
             <td><%= f.text_field :first_name_kana, placeholder: "レイワ" %></td>
           </tr>
           <tr>
             <td>メールアドレス</td>
             <td></td>
             <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
             <td></td>
             <td></td>
           </tr>
           <tr>
             <td>郵便番号(ハイフンなし)</td>
             <td></td>
             <td><%= f.text_field :post_code, placeholder: "0000000" %></td>
             <td></td>
             <td></td>
           </tr>
           <tr>
             <td>住所</td>
             <td></td>
             <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木園町0-0",  :size => "52" %></td>
           </tr>
           <tr>
             <td>電話番号(ハイフンなし)</td>
             <td></td>
             <td><%= f.text_field :phone_number, placeholder: "00000000" %></td>
             <td></td>
             <td></td>
           </tr>
           <tr>
             <td>パスワード(6文字以上)</td>
             <td></td>
             <td><%= f.password_field :password, autocomplete: "new-password" %></td>
             <td></td>
             <td></td>
           </tr>
           <tr>
             <td>パスワード(確認用)</td>
             <td></td>
             <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
             <td></td>
             <td></td>
           </tr>
           <tr>
             <td></td>
             <td></td>
             <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
             <td></td>
             <td></td>
           </tr>
         </table>
      <% end %>
      <h2 class="mt-4 ml-3">既に登録済みの方</h2>
      <p class="ml-5"><%= render "public/shared/links" %>からログインしてください</p>
    </div>
  </div>
</div>

