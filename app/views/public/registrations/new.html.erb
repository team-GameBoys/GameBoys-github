<div class="container">

      <h2 class="mt-4 ml-3">新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
    <div class="row mt-4">
      <div class="col-3">
        <div class="mt-4">名前</div>
        <div class="my-4">フリガナ</div>
        <div class="my-4">メールアドレス</div>
        <div class="mt-5">郵便番号(ハイフンなし)</div>
        <div class="my-4">住所</div>
        <div class="my-4">電話番号(ハイフンなし)</div>
        <div class="mt-5">パスワード(６文字以上)</div>
        <div class="mt-4">パスワード(確認用)</div>
      </div>

<!--labelだけで縦一行分作る-->

      <div class="col-1">
        <label class="mt-4"><%= f.label :"(姓)" %></label>
        <label class="mt-3"><%= f.label :"(セイ)" %></label>
      </div>
      <div class="col-3 p-0">
        <div class="my-4"><%= f.text_field :first_name, placeholder: "令和" %></div>
        <div class="my-4"><%= f.text_field :first_name_kana, placeholder: "道子" %></div>
        <div class="my-4"><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></div>
        <div class="my-4"><%= f.text_field :post_code, placeholder: "0000000" %></div>
        <div class="my-4"><%= f.text_field :address, placeholder: "東京都渋谷区代々木園町0-0" %></div>
        <div class="my-4"><%= f.text_field :phone_number, placeholder: "00000000" %></div>
        <div class="my-4">
          <%# if @minimum_password_length %>
                  <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
                  <%# end %>
                  <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="mt-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
        <div class="actions mt-5"><%= f.submit "新規登録", class: "btn btn-success" %></div>
      </div>


      <div class="col-1">
        <label class="mt-4"><%= f.label :"(名)" %></label>
        <label class="mt-3"><%= f.label :"(メイ)"%></label>
      </div>

      <div class="col-3 p-0">
        <div class="mt-4"><%= f.text_field :last_name, placeholder: "令和" %></div>
        <div class="mt-4"><%= f.text_field :last_name_kana, placeholder: "令和" %></div>
      </div>


    <% end %>
  </div>

  <h2 class="ml-4">既に登録済みの方</h2>
  <p class="ml-5"><%= render "public/shared/links" %>からログインしてください</p>
</div>

